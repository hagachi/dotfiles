#########################################
# Change color of ls
# https://kojinjigyou.org/20342/
export LSCOLORS=gxfxcxdxbxegedabagacad

#########################################
# Added by Maezono for general operations
# and modified by hagachi
alias setal='nvim ~/.alias'
alias fixal='source  ~/.alias'
alias setzsh='nvim ~/.zshrc'
alias fixzsh='source ~/.zshrc'
alias rehash='hash -r'
alias which='command -v'
alias del='rm -i'
alias tarc='tar -cvf'
alias tarx='tar -xvf'
alias tarz='tar xvfz'
alias mvdir='mv -f'
alias rmdir='rm -r'
alias l='ls -CFG'
alias ls='ls -CFG'
alias ll='ls -lhG'
alias llm='ls -lG | more'
alias la='ls -aG'
alias lh='ls -alhG'
alias c='cd ..; ls'
alias q='clear'
alias h='history'
alias rt='rm *~'
alias cu='clearup'
alias v='nvim'
